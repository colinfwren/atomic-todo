{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2017",
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "composite": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "codegen.ts"
  ],
  "ts-node": {
    "esm": true
  }
}